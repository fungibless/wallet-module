{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
  },
  "include": [
    "./src/*.ts",
  ]
}